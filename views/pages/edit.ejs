

<div class="jumbotron text-center">
	<h1>Editing <%= task.name %></h1>
</div>

<div class="row">
	<div class="col-sm-9 col-sm-offset-3">
		<% if(errors.length > 0) { %>
			<div class="alert alert-danger">
				<% for (error of errors) { %>
					<%= error %>
					<br>
				<% } %>
			</div>
		<% } %>

		<form action="/task_list/task/<%= task.slug %>" method="POST">
			<div class="form-group">
				<label for="task">Task</label>
				<input type="text" name="task" class="form-control" value="<%= task.name %>">
			</div>

			<div class="form-group">
				<textarea name="detail" id="detail" rows="5" class="form-control"><%= task.detail %></textarea>
			</div>

			<div class="form-group text-center">
				<button type="submit" class="btn btn-success button-lg">
					Update
				</button>
			</div>	
		</form>
	</div>
</div>
